<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GruppoUploadFragment">

    <LinearLayout
        android:id="@+id/contenitoreUpload_totale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/info_creator_box"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/creator_name"
                android:textSize="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/short_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Messaggio creatore"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/uploadCheckOff"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/baseline_check_box_outline_blank_24"/>
                <ImageButton
                    android:id="@+id/uploadCheckOn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/baseline_check_box_24"
                    android:visibility="gone"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/deckUpload"/>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/upload"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="bottom"
            android:src="@drawable/baseline_file_upload_24"/>

    </LinearLayout>

</FrameLayout>